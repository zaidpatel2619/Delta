<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>
                    <%= listing.title %>
                </h3>
            </div>
            <div class="col-6 offset-2">
                <div class="card listing-card mt-3">
                    <img src="<%= listing.image %>"
                        class="card-img-top show-img" alt="<%= listing.image %>">
                    <div class="card-body">
                        <p class="card-text">Owned By: <%= listing.owner.username %></p>
                        <p class="card-text"><%= listing.description %></p>
                        <p class="card-text">&#8377; <%= listing.price.toLocaleString('en-IN') %></p>
                        <p class="card-text"><%= listing.location %></p>
                        <p class="card-text"><%= listing.country %></p>
                    </div>
                </div>
                <br>
                <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
                <div class="btns">
                    <button class="btn btn-dark add-btn me-3">
                        <a href="/listings/<%= listing._id %>/edit">Edit</a>
                    </button>
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-dark">DELETE</button>
                    </form>
                </div>
                <% } %>
            </div>
        </div>

        <div class="col-8 offset-2">
            <% if (currentUser) { %>
            <hr>
            <h4>Leave a Review</h4>
            <form class="form needs-validation" novalidate method="post" action="/listings/<%= listing.id %>/reviews">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" name="review[rating]" id="rating" min="1" max="5" class="form-range">
                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" cols="20" rows="5" class="form-control"
                        required></textarea>
                    <div class="invalid-feedback">
                        Please add a comment.
                    </div>
                </div>
                <div class="mb-3 mt-3">
                    <button type="submit" class="btn btn-dark">Submit</button>
                </div>
            </form>
            <% } %>
            <h5><% if (listing.reviews.length > 0) { %>
                <hr>
                 All Reviews
                <% } %>
            </h5>
            <div class="row">
                <% for(review of listing.reviews) { %>
                    <div class="card ms-3 mb-3 col-5">
                        <div class="card-body">
                            <h5 class="card-title"><%= review.author.username %></h5>
                            <div class="card-text">
                                <%= review.rating %> stars
                            </div>
                            <div class="card-text">
                                <%= review.comment %>
                            </div>
                            <% if (currentUser && currentUser._id.equals(review.author._id)) { %>
                            <form method="POST" action="/listings/<%= listing.id %>/reviews/<%= review._id %>?_method=DELETE"> 
                                <button class="btn btn-sm btn-dark mt-1 mb-2">Delete</button>
                            </form>
                            <% } %>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </body>