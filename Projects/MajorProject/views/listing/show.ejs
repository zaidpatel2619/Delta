<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>
                    <%= listing.title %>
                </h3>
            </div>
            <div class="col-6 offset-2">
                <div class="card mt-3">
                    <img src="<%= listing.image.url ? listing.image.url : listing.image %>" class="card-img-top show-img" alt="<%= listing.image %>">
                    <div class="card-body">
                        <p class="card-text">
                            <b>
                                <%= listing.title %>
                            </b>
                            <br>
                            <%= listing.description %>
                            <br>
                            &#8377; <%= listing.price.toLocaleString('en-IN') %>
                            <br>
                            <%= listing.location %>
                            <br>
                            <%= listing.country %>
                            <br>
                        </p>
                    </div>
                </div>
                <br>
                <div class="btns">
                    <button class="btn btn-dark add-btn me-3">
                        <a href="/listings/<%= listing._id %>/edit">Edit</a>
                    </button>
                    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-dark">DELETE</button>
                    </form>
                </div>
            </div>
        </div>
    </body>